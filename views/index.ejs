<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS Kopi - Sistem Penjualan</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <style>
        body { 
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); 
            min-height: 100vh; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .navbar { 
            background: rgba(255, 255, 255, 0.95) !important; 
            backdrop-filter: blur(10px); 
            box-shadow: 0 2px 20px rgba(0,0,0,0.1);
        }
        .card { 
            border: none; 
            border-radius: 15px; 
            box-shadow: 0 10px 30px rgba(0,0,0,0.1); 
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            overflow: hidden;
        }
        .card:hover { 
            transform: translateY(-5px); 
            box-shadow: 0 20px 40px rgba(0,0,0,0.2);
        }
        .card-img-top { 
            height: 180px; 
            object-fit: cover; 
            transition: transform 0.3s ease;
        }
        .card:hover .card-img-top { transform: scale(1.05); }
        .btn-primary { 
            background: linear-gradient(45deg, #007bff, #0056b3); 
            border: none; 
            border-radius: 25px; 
            padding: 10px 20px;
            transition: all 0.3s ease;
        }
        .btn-primary:hover { 
            transform: translateY(-2px); 
            box-shadow: 0 5px 15px rgba(0,123,255,0.4);
        }
        .form-control { 
            border-radius: 10px; 
            border: 2px solid #e9ecef; 
            transition: border-color 0.3s ease;
        }
        .form-control:focus { 
            border-color: #007bff; 
            box-shadow: 0 0 0 0.2rem rgba(0,123,255,0.25);
        }
        .badge { 
            font-size: 0.8em; 
            border-radius: 20px;
        }
        .container { 
            background: rgba(255, 255, 255, 0.9); 
            border-radius: 20px; 
            padding: 30px; 
            margin-top: 20px; 
            margin-bottom: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        }
        h1 { 
            color: #333; 
            font-weight: 700; 
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
        .cart-item { 
            background: linear-gradient(45deg, #f8f9fa, #e9ecef); 
            border-radius: 10px; 
            padding: 15px; 
            margin: 10px 0; 
            border-left: 5px solid #007bff;
        }
        @media (max-width: 768px) {
            .container {
                padding: 15px;
                margin-top: 10px;
                margin-bottom: 10px;
            }
            .navbar {
                padding: 0.5rem;
            }
            .navbar-brand {
                font-size: 1.2rem;
            }
            .card-img-top {
                height: 120px;
            }
            .card-body {
                padding: 10px;
            }
            .card-title {
                font-size: 1rem;
            }
            .btn {
                font-size: 0.9rem;
                padding: 8px 16px;
            }
            .form-control {
                font-size: 0.9rem;
            }
            h1 {
                font-size: 1.5rem;
            }
            h2 {
                font-size: 1.2rem;
            }
            h4 {
                font-size: 1.1rem;
            }
            .cart-item {
                padding: 10px;
            }
            .input-group-sm .btn {
                padding: 0.25rem 0.5rem;
            }
        }
        @media (max-width: 576px) {
            .container {
                padding: 10px;
                margin-top: 5px;
                margin-bottom: 5px;
            }
            .navbar {
                padding: 0.25rem;
            }
            .navbar-brand {
                font-size: 1rem;
            }
            .card-img-top {
                height: 100px;
            }
            .card-body {
                padding: 8px;
            }
            .card-title {
                font-size: 0.9rem;
            }
            .btn {
                font-size: 0.8rem;
                padding: 6px 12px;
            }
            .form-control {
                font-size: 0.8rem;
            }
            h1 {
                font-size: 1.2rem;
            }
            h2 {
                font-size: 1rem;
            }
            h4 {
                font-size: 1rem;
            }
            .cart-item {
                padding: 8px;
            }
            .input-group-sm .btn {
                padding: 0.2rem 0.4rem;
            }
        }
    </style>
</head>
<body>
    <div id="app" class="container mt-5">
        <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"><i class="fas fa-coffee"></i> POS Kopi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <span class="navbar-text"><i class="fas fa-user"></i> Selamat datang, <%= user.username %></span>
                        <div class="d-flex">
                            <a href="/admin" class="btn btn-outline-primary me-2"><i class="fas fa-cog"></i> Kelola Produk</a>
                            <a href="/reports" class="btn btn-outline-info me-2"><i class="fas fa-chart-bar"></i> Laporan</a>
                            <button class="btn btn-outline-secondary position-relative me-2">
                                <i class="fas fa-shopping-cart"></i> Keranjang <span class="badge bg-danger">{{ totalItems }}</span>
                            </button>
                            <a href="/logout" class="btn btn-outline-danger"><i class="fas fa-sign-out-alt"></i> Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <h1 class="text-center mb-4">Sistem POS Penjualan Kopi</h1>
        
        <div class="row">
            <div class="col-12 col-md-8">
                <h2>Produk Tersedia</h2>
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Cari produk..." v-model="searchQuery">
                </div>
                <div class="row">
                    <div v-if="filteredProducts.length === 0" class="col-12">
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i> Tidak ada produk yang tersedia atau sesuai dengan pencarian.
                        </div>
                    </div>
                    <div v-for="product in filteredProducts" :key="product.id" class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
                        <div class="card product-card">
                            <img :src="product.image" class="card-img-top" alt="Gambar Produk" style="height: 150px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text">Harga: Rp {{ formatIDR(product.price) }}</p>
                                <p class="card-text">
                                    Stok: {{ product.stock }}
                                    <span v-if="product.stock === 0" class="badge bg-danger">Habis</span>
                                    <span v-else-if="product.stock < 10" class="badge bg-warning text-dark">Stok Rendah</span>
                                </p>
                                <div class="input-group mb-2">
                                    <input type="number" class="form-control" v-model="quantities[product.id]" min="1" :max="product.stock" :disabled="product.stock < 1">
                                </div>
                                <button class="btn btn-primary" @click="addToCart(product)" :disabled="product.stock < 1"><i class="fas fa-cart-plus"></i> Tambah ke Keranjang</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-12 col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3>Keranjang Belanja</h3>
                    </div>
                    <div class="card-body">
                        <ul class="list-group mb-3">
                            <li v-for="item in cart" :key="item.id" class="list-group-item cart-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        {{ item.name }} - Rp {{ formatIDR(item.price) }}
                                        <div class="input-group input-group-sm mt-1" style="width: 120px;">
                                            <button class="btn btn-outline-secondary btn-sm" @click="updateQuantity(item.id, item.quantity - 1)" :disabled="item.quantity <= 1">-</button>
                                            <input type="number" class="form-control form-control-sm text-center" v-model="item.quantity" min="1" :max="item.stock" @change="updateQuantity(item.id, parseInt($event.target.value))">
                                            <button class="btn btn-outline-secondary btn-sm" @click="updateQuantity(item.id, item.quantity + 1)" :disabled="item.quantity >= item.stock">+</button>
                                        </div>
                                        <small class="text-muted">Subtotal: Rp {{ formatIDR(item.price * item.quantity) }}</small>
                                    </div>
                                    <button class="btn btn-sm btn-danger" @click="removeFromCart(item.id)"><i class="fas fa-trash"></i></button>
                                </div>
                            </li>
                        </ul>
                        <h4>Total: Rp {{ formatIDR(total) }}</h4>
                        <div class="mb-3">
                            <label for="payment-method" class="form-label"><i class="fas fa-credit-card"></i> Metode Pembayaran</label>
                            <select class="form-select" id="payment-method" v-model="paymentMethod">
                                <option value="Tunai">Tunai</option>
                                <option value="QRIS">QRIS</option>
                            </select>
                        </div>
                        <div v-if="paymentMethod === 'Tunai'" class="mb-3">
                            <label for="payment-amount" class="form-label"><i class="fas fa-money-bill-wave"></i> Uang Diberikan</label>
                            <input type="number" class="form-control" id="payment-amount" v-model="paymentAmount" min="total" step="1000" required>
                            <small class="form-text">
                                Total: Rp {{ formatIDR(total) }} | 
                                <span v-if="change > 0" class="text-success">Kembalian: Rp {{ formatIDR(change) }}</span>
                                <span v-else-if="change === 0 && paymentAmount >= total" class="text-info">Uang pas</span>
                                <span v-else class="text-danger">Uang kurang</span>
                            </small>
                        </div>
                        <button class="btn btn-success w-100" @click="checkout" :disabled="cart.length === 0"><i class="fas fa-credit-card"></i> Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        window.productsData = <%- JSON.stringify(products) %>;
    </script>
    <script>
        const { createApp } = Vue;

        createApp({
            data() {
                return {
                    products: window.productsData,
                    cart: [],
                    quantities: {},
                    paymentMethod: 'Tunai',
                    paymentAmount: 0,
                    searchQuery: ''
                }
            },
            computed: {
                total() {
                    return this.cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
                },
                totalItems() {
                    return this.cart.reduce((sum, item) => sum + item.quantity, 0);
                },
                change() {
                    if (this.paymentMethod === 'Tunai') {
                        return Math.max(0, this.paymentAmount - this.total);
                    }
                    return 0;
                },
                filteredProducts() {
                    if (!this.searchQuery) {
                        return this.products;
                    }
                    return this.products.filter(product =>
                        product.name.toLowerCase().includes(this.searchQuery.toLowerCase())
                    );
                }
            },
            methods: {
                formatIDR(amount) {
                    return new Intl.NumberFormat('id-ID').format(amount);
                },
                addToCart(product) {
                    const qty = parseInt(this.quantities[product.id] || 1);
                    if (qty > product.stock) {
                        alert('Stok tidak cukup!');
                        return;
                    }
                    const existing = this.cart.find(item => item.id === product.id);
                    if (existing) {
                        existing.quantity += qty;
                    } else {
                        this.cart.push({ ...product, quantity: qty });
                    }
                    this.quantities[product.id] = 1; // Reset quantity
                },
                removeFromCart(id) {
                    this.cart = this.cart.filter(item => item.id !== id);
                },
                updateQuantity(id, newQty) {
                    const item = this.cart.find(i => i.id === id);
                    if (item) {
                        newQty = Math.max(1, Math.min(newQty, item.stock));
                        item.quantity = newQty;
                    }
                },
                async checkout() {
                    if (this.cart.length === 0) {
                        alert('Keranjang kosong!');
                        return;
                    }
                    if (this.paymentMethod === 'Tunai' && this.paymentAmount < this.total) {
                        alert('Uang diberikan kurang!');
                        return;
                    }
                    try {
                        const response = await fetch('/order', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ 
                                items: JSON.stringify(this.cart), 
                                payment_method: this.paymentMethod,
                                payment_amount: this.paymentAmount
                            })
                        });
                        const data = await response.json();
                        if (data.success) {
                            alert('Pesanan berhasil! Struk ID: ' + data.receiptId);
                            window.open(`/receipt/${data.receiptId}`, '_blank');
                            this.cart = [];
                            this.paymentAmount = 0;
                        } else {
                            alert('Error: ' + data.message);
                        }
                    } catch (error) {
                        alert('Terjadi kesalahan: ' + error.message);
                    }
                }
            },
            mounted() {
                // Initialize quantities
                this.products.forEach(product => {
                    this.quantities[product.id] = 1;
                });
            }
        }).mount('#app');
    </script>
</body>
</html>